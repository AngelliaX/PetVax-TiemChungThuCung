
@{

}

@model TiemChungThuCung.Areas.Doctor.Models.ProfessionModel

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl-8 mx-auto">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Hồ sơ nghiệp vụ</h5>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["SuccessMessage"]
                                </div>
                            }

                            <div class="mb-3">
                                <label for="exampleFormControlSelect2" class="form-label"><i class="bx bxs-coin-stack"></i>Hãy chọn (các) chuyên môn</label>
                                <select multiple
                                        class="form-select"
                                        id="exampleFormControlSelect2"
                                        aria-label="Multiple select example"
                                        name="chosenBreed_id" required>
                                    @{
                                        int temp = 0;
                                    }
                                    @foreach (var item in Model.breed_id)
                                    {
                                        <option value="@item" @(Model.chosenBreed_id.Contains(item) ? "selected" : "")>@Model.breed_name[temp]</option>
                                        temp++;
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="education"><i class="bx bxs-graduation"></i> Học vấn</label>
                                @Html.TextAreaFor(m => m.education, new { id = "textarea1", @class = "form-control", @placeholder = "Hi, Do you have a moment to talk Joe?" })
                            </div>
                            <script>
                                function resizeTextarea(id) {
                                    var element = document.getElementById(id);
                                    element.style.height = "auto";
                                    element.style.height = element.scrollHeight + 50 + "px";
                                }
                                window.onload = function () {
                                    resizeTextarea("textarea1");
                                    resizeTextarea("textarea2");
                                }
                            </script>
                            <div class="mb-3">
                                <label class="form-label" for="experience"><i class="bx bxs-trophy"></i> Kinh nghiệm</label>
                                @Html.TextAreaFor(m => m.experience, new { id = "textarea1", @class = "form-control", @placeholder = "Hi, Do you have a moment to talk Joe?" })
                            </div>

                            <button type="submit" class="btn btn-primary">Send</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>