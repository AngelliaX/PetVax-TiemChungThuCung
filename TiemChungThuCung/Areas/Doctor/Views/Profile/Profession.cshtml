@model TiemChungThuCung.Areas.Doctor.Models.ProfessionModel
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl-8 mx-auto">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Hồ sơ nghiệp vụ</h5>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label for="exampleFormControlSelect2" class="form-label"><i class="bx bxs-coin-stack"></i>Hãy chọn (các) chuyên môn</label>
                                <select multiple
                                        class="form-select"
                                        id="exampleFormControlSelect2"
                                        aria-label="Multiple select example"
                                        name="chosenBreed_id" disabled>
                                    @{
                                        int temp = 0;
                                    }
                                    @foreach (var item in Model.breed_id)
                                    {
                                        <option value="@item" @(Model.chosenBreed_id.Contains(item) ? "selected" : "")>@Model.breed_name[temp]</option>
                                        temp++;
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="basic-default-message"><i class="bx bxs-graduation"></i> Học vấn </label>
                                <textarea id="textarea1"
                                          class="form-control"
                                          placeholder="Hãy ghi học vấn vào"
                                          disabled>@Model.education</textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="basic-default-message"><i class="bx bxs-trophy"></i> Kinh nghiệm </label>
                                <textarea id="textarea2"
                                          class="form-control"
                                          placeholder="Hãy ghi kinh nghiệm vào"
                                          disabled>@Model.experience</textarea>
                            </div>
                            <script>
                                function resizeTextarea(id) {
                                    var element = document.getElementById(id);
                                    element.style.height = "auto";
                                    element.style.height = element.scrollHeight + 50 + "px";
                                }
                                window.onload = function () {
                                    resizeTextarea("textarea1");
                                    resizeTextarea("textarea2");
                                }
                            </script>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
