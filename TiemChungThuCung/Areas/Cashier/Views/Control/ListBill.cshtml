@model IEnumerable<Models.EntityFramework.bill>

@{

}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <h5 class="card-header">Striped rows</h5>
            <div class="table-responsive text-nowrap">
                <table class="table table-striped">
                    <thead style="text-align:center">
                        <tr>
                            <th>STT</th>
                            <th>Mã hóa đơn</th>
                            <th>Khách hàng</th>
                            <th>Ngày tạo</th>
                            <th>Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0" style="text-align:center">
                        @{
                            int index = 0;
                        }

                        @foreach (var item in Model)
                        {
                            index++;
                            <tr>
                                <td>@index</td>
                                <td>@item.bill_id</td>
                                <td>
                                    @item.client.account.name
                                </td>
                                <td>@item.init_date.ToString("dd/MM/yyyy H:m:s")</td>
                                <td>
                                    @item.total_cost
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="@Url.Action("Detail", "Control", new {BillID = item.bill_id})"><i class="bx bx-info-circle"></i> Chi tiết</a>
                                            @*<a class="dropdown-item" href="@Url.Action("Edit", "Control", new {BillID = item.bill_id})"><i class="bx bx-edit-alt me-1"></i> Chỉnh sửa</a>*@
                                            <a class="dropdown-item" href="@Url.Action("Delete", "Control", new {BillID = item.bill_id})"><i class="bx bx-trash me-1"></i> Xóa</a>
                                            @*<button type="button"
                                            class="btn btn-primary"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modalCenter">
                                        Launch modal
                                    </button>*@

                                        </div>
                                    </div>
                                </td>
                            </tr>
                            

                        }
                    </tbody>

                </table>


                <!--Detail Modal -->
                @foreach(var item in Model)
                {
                    <div class="modal fade" id="Detail-@item.bill_id" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalCenterTitle">Modal title</h5>
                                    <button type="button"
                                            class="btn-close"
                                            data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col mb-3">
                                            <label for="nameWithTitle" class="form-label">Mã Hóa đơn</label>
                                            <input type="text"
                                                   id="nameWithTitle"
                                                   class="form-control"
                                                   placeholder="Enter Name" 
                                                   value="@item.bill_id"/>
                                        </div>
                                    </div>
                                    <div class="row g-2">
                                        <div class="col mb-0">
                                            <label for="emailWithTitle" class="form-label">Email</label>
                                            <input type="text"
                                                   id="emailWithTitle"
                                                   class="form-control"
                                                   placeholder="xxxx@xxx.xx" />
                                        </div>
                                        <div class="col mb-0">
                                            <label for="dobWithTitle" class="form-label">DOB</label>
                                            <input type="text"
                                                   id="dobWithTitle"
                                                   class="form-control"
                                                   placeholder="DD / MM / YY" />
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                        Close
                                    </button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!--Detail Modal -->


                <!--Detail Modal -->
                <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">Modal title</h5>
                                <button type="button"
                                        class="btn-close"
                                        data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col mb-3">
                                        <label for="nameWithTitle" class="form-label">Name</label>
                                        <input type="text"
                                               id="nameWithTitle"
                                               class="form-control"
                                               placeholder="Enter Name" />
                                    </div>
                                </div>
                                <div class="row g-2">
                                    <div class="col mb-0">
                                        <label for="emailWithTitle" class="form-label">Email</label>
                                        <input type="text"
                                               id="emailWithTitle"
                                               class="form-control"
                                               placeholder="xxxx@xxx.xx" />
                                    </div>
                                    <div class="col mb-0">
                                        <label for="dobWithTitle" class="form-label">DOB</label>
                                        <input type="text"
                                               id="dobWithTitle"
                                               class="form-control"
                                               placeholder="DD / MM / YY" />
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                    Close
                                </button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Detail Modal -->

            </div>
        </div>
    </div>
</div>



